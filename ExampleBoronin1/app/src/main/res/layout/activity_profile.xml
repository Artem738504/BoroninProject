<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround"
    tools:context=".Profile">

    <Button
        android:id="@+id/bSecName"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/more_buttons"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/TextView"
        app:layout_constraintEnd_toEndOf="@+id/bName"
        app:layout_constraintStart_toStartOf="@+id/bName"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/bName"
        android:layout_width="228dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/more_buttons"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bSecName"
        tools:ignore="MissingConstraints"
        tools:visibility="visible" />

    <Button
        android:id="@+id/bAge"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/more_buttons"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@color/TextView"
        app:layout_constraintEnd_toEndOf="@+id/bName"
        app:layout_constraintStart_toStartOf="@+id/bName"
        app:layout_constraintTop_toBottomOf="@+id/bName"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_edit"
        android:layout_width="176dp"
        android:layout_height="51dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_button"
        android:text="@string/Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bAge" />

    <Button
        android:id="@+id/bMain"
        android:layout_width="176dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custom_button"
        android:onClick="onClickMain"
        android:text="@string/Main"
        app:layout_constraintEnd_toEndOf="@+id/button_edit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_edit"
        app:layout_constraintTop_toBottomOf="@+id/button_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>